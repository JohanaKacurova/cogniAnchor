{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["modules/*"],
      "@/contexts/*": ["modules/contexts/*"],
      "@/hooks/*": ["modules/core/hooks/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
